@page
@model RazorApp.Pages.Account.UpdateAccountModel
@{
    ViewData["Title"] = "Update Account";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1>@ViewData["Title"]</h1>

        <form method="post">
            <input type="hidden" asp-for="Account.Id" />
            <div class="form-group">
                <label asp-for="Account.AccountNumber"> Account Number:</label>
                <input asp-for="Account.AccountNumber" class="form-control"/>
                <span asp-validation-for="Account.AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Balance">Balance:</label>
                <input asp-for="Account.Balance" class="form-control"/>
                <span asp-validation-for="Account.Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.OwnerId">Owner Id:</label>
                <input asp-for="Account.OwnerId" class="form-control"/>
                <span asp-validation-for="Account.OwnerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Type">Type:</label>
                <input asp-for="Account.Type" class="form-control"/>
                <span asp-validation-for="Account.Type" class="text-danger"></span>
            </div>

            <!-- Добавьте другие поля DTO здесь, если необходимо -->

            <button type="submit" class="btn btn-primary">Update Account</button>
            <a asp-page="/Account/GetAccounts" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
</html>
